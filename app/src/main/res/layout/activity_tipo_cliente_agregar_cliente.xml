<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1D1B41"
    android:padding="18dp"
    tools:context=".TipoClienteAgregarClinteActivity">

    <!-- Encabezado con ícono de usuario -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <!-- Ícono de usuario a la izquierda -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgUsuario"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/person_24"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp"
            app:backgroundTint="#1D1B41" />

        <!-- TextView de usuario centrado -->
        <TextView
            android:id="@+id/tvUsuario"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imgUsuario"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical"
            android:text="Usuario"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/inria_sans"/>

        <!-- Chevron a la derecha -->
        <ImageView
            android:id="@+id/iconBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/chevron_backward_24"
            android:tint="#FFFFFF" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp">

        <!-- Grupo pelota + texto centrado -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_centerInParent="true">

            <!-- Pelota de soccer CENTRADA -->
            <ImageView
                android:id="@+id/imgPelota"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/soccer_ball" />

            <!-- Texto Bienvenido/a a la derecha de la pelota -->
            <TextView
                android:id="@+id/title_tipo_cliente_agregar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="¿Que tipo de Cliente necesitas agregar?"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/inria_sans" />

        </LinearLayout>

    </RelativeLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#3E3A72"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#1D1B41"
            android:padding="16dp"
            android:backgroundTint="#3E3A72"
            >
            <!-- Menú con botones -->
            <GridLayout
                android:id="@+id/tarjetaCentralMenuTipoCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:rowCount="2"
                android:gravity="center"
                android:alignmentMode="alignBounds"
                android:padding="12dp">

                <!-- Cada botón con ícono Material -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTipoClienteSocio"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:text="Socio"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:lineSpacingExtra="2dp"
                    android:fontFamily="@font/inria_sans"
                    app:icon="@drawable/person_check_24"
                    app:iconGravity="textTop"
                    app:iconSize="40dp"
                    app:iconPadding="8dp"
                    app:cornerRadius="12dp"
                    app:iconTint="@color/white"
                    android:backgroundTint="#1D1B41" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTipoClienteNoSocio"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    android:text="No Socio"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:fontFamily="@font/inria_sans"
                    android:textStyle="bold"
                    app:icon="@drawable/person_24"
                    app:iconSize="42dp"
                    app:iconGravity="textTop"
                    app:iconPadding="8dp"
                    app:cornerRadius="12dp"
                    app:iconTint="@color/white"
                    android:backgroundTint="#1D1B41" />

            </GridLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#1D1B41"
        android:padding="16dp"
        android:backgroundTint="#1D1B41">

        <!-- Texto final -->
        <TextView
            android:id="@+id/tvAyuda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Necesitas ayuda?"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/inria_sans"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>
</LinearLayout>