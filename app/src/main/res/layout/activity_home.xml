<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1D1B41"
    android:padding="18dp"
    tools:context=".MainActivity">

    <!-- ===== ENCABEZADO ===== -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <!-- Ícono de usuario a la izquierda -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgUsuario"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/person_24"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp"
            app:backgroundTint="#1D1B41" />

        <!-- TextView de usuario centrado -->
        <TextView
            android:id="@+id/tvUsuario"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="4dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imgUsuario"
            android:gravity="center_vertical"
            android:text="[User]"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/inria_sans"/>

        <!-- Chevron a la derecha -->
        <ImageView
            android:id="@+id/iconBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/chevron_backward_24"
            android:src="@drawable/chevron_backward_24"
            android:tint="#FFFFFF" />

    </RelativeLayout>

    <!-- ===== TÍTULO BIENVENIDA ===== -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp">

        <!-- Grupo pelota + texto centrado -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_centerInParent="true">

            <!-- Pelota de soccer CENTRADA -->
            <ImageView
                android:id="@+id/imgPelota"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/soccer_ball" />

            <!-- Texto Bienvenido/a a la derecha de la pelota -->
            <TextView
                android:id="@+id/title_saludo_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Bienvenido [User] !!"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/inria_sans" />

        </LinearLayout>

    </RelativeLayout>

    <!-- ===== CARD CON MENÚ PRINCIPAL ===== -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="18dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#3E3A72"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <!-- Menú con botones -->
            <GridLayout
                android:id="@+id/tarjetaCentralMenuPrincipal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:padding="12dp"
                android:useDefaultMargins="true">

                <!-- Cada botón con ícono Material -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnClientes"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    android:backgroundTint="#1D1B41"
                    android:fontFamily="@font/inria_sans"
                    android:text="Clientes"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/person_24"
                    app:iconGravity="textTop"
                    app:iconPadding="8dp"
                    app:iconSize="32dp"
                    app:iconTint="@color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPersonal"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    android:backgroundTint="#1D1B41"
                    android:fontFamily="@font/inria_sans"
                    android:text="Personal"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/article_person_24"
                    app:iconGravity="textTop"
                    app:iconPadding="8dp"
                    app:iconSize="32dp"
                    app:iconTint="@color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnActividades"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    android:backgroundTint="#1D1B41"
                    android:fontFamily="@font/inria_sans"
                    android:text="Actividades"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/directions_run_24"
                    app:iconGravity="textTop"
                    app:iconPadding="8dp"
                    app:iconSize="32dp"
                    app:iconTint="@color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTurnos"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    android:backgroundTint="#1D1B41"
                    android:fontFamily="@font/inria_sans"
                    android:text="Turnos"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/calendar_month_24"
                    app:iconGravity="textTop"
                    app:iconPadding="8dp"
                    app:iconSize="32dp"
                    app:iconTint="@color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAcercaDe"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    android:backgroundTint="#1D1B41"
                    android:fontFamily="@font/inria_sans"
                    android:text="Acerca De"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/info_24"
                    app:iconGravity="textTop"
                    app:iconPadding="8dp"
                    app:iconSize="32dp"
                    app:iconTint="@color/white" />

            </GridLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- ===== FOOTER ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Texto final -->
        <TextView
            android:id="@+id/tvAyuda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Necesitas ayuda?"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="@font/inria_sans"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</LinearLayout>