<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1D1B41"
    android:padding="18dp"
    tools:context=".ClienteBuscarClienteResultado">

    <!-- ===== ENCABEZADO ===== -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgUsuario"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/person_24"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp"
            app:backgroundTint="#1D1B41" />

        <TextView
            android:id="@+id/tvUsuario"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="4dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/imgUsuario"
            android:gravity="center_vertical"
            android:text="Usuario"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/inria_sans" />

        <ImageView
            android:id="@+id/iconBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/chevron_backward_24"
            android:tint="#FFFFFF" />
    </RelativeLayout>

    <!-- ===== TÍTULO ===== -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp">

        <!-- Grupo pelota + texto centrado -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_centerInParent="true">

            <!-- Pelota de soccer CENTRADA -->
            <ImageView
                android:id="@+id/imgPelota"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/soccer_ball" />

            <!-- Texto a la derecha de la pelota -->
            <TextView
                android:id="@+id/title_resultado_busqueda_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Resultados de la búsqueda"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/inria_sans" />

        </LinearLayout>

    </RelativeLayout>

    <!-- ===== CARD CON RESULTADOS ===== -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="18dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#3E3A72"
        app:cardElevation="4dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="30dp"
                android:paddingVertical="20dp">

                <TextView
                    android:id="@+id/tvSeleccionado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selecciona un cliente:"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/inria_sans" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvClientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:scrollbars="vertical" />
            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

    <!-- ===== GRID DE BOTONES DE ACCIÓN ===== -->
    <GridLayout
        android:id="@+id/gridAcciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:padding="4dp"
        android:useDefaultMargins="true">

        <!-- Fila 1 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnModificar"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="Modificar"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/inria_sans"
            app:backgroundTint="#00BCD4"
            app:cornerRadius="8dp"
            app:icon="@drawable/edit_24"
            app:iconGravity="textTop"
            app:iconPadding="4dp"
            app:iconTint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEliminar"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="Eliminar"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/inria_sans"
            app:backgroundTint="#FF5252"
            app:cornerRadius="8dp"
            app:icon="@drawable/delete_24"
            app:iconGravity="textTop"
            app:iconPadding="4dp"
            app:iconTint="@color/white" />

        <!-- Fila 2 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVer"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="Ver"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/inria_sans"
            app:backgroundTint="#3A3672"
            app:cornerRadius="8dp"
            app:icon="@drawable/visibility_24"
            app:iconGravity="textTop"
            app:iconPadding="4dp"
            app:iconTint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPagos"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="Pagos"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/inria_sans"
            app:backgroundTint="#3A3672"
            app:cornerRadius="8dp"
            app:icon="@drawable/payments_24"
            app:iconGravity="textTop"
            app:iconPadding="4dp"
            app:iconTint="@color/white" />

        <!-- Fila 3 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnActividades"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="Actividades"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/inria_sans"
            app:backgroundTint="#3A3672"
            app:cornerRadius="8dp"
            app:icon="@drawable/fitness_center_24"
            app:iconGravity="textTop"
            app:iconPadding="4dp"
            app:iconTint="@color/white" />

        <!-- Cambiado de "Más Resultados" a "Asistencias" -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAsistencias"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="Asistencias"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/inria_sans"
            app:backgroundTint="#3A3672"
            app:cornerRadius="8dp"
            app:icon="@drawable/schedule_24"
            app:iconGravity="textTop"
            app:iconPadding="4dp"
            app:iconTint="@color/white" />

    </GridLayout>

    <!-- ===== FOOTER ===== -->
    <TextView
        android:id="@+id/tvAyuda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="¿Necesitas Ayuda?"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:fontFamily="@font/inria_sans"
        android:layout_marginTop="12dp" />
</LinearLayout>